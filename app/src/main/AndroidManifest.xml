<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.edu.cdu.fotius.lisun.musicplayer" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MusicPlayerTheme" >
        <activity
            android:name=".activities.NavigationActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MediaPlaybackService" />

        <activity
            android:name=".activities.AlbumsDetalizationActivity"
            android:label="@string/title_activity_detalization" >
        </activity>
        <activity
            android:name=".activities.TrackDetalizationActivity"
            android:label="@string/title_activity_track_detalization" >
        </activity>
        <activity
            android:name=".activities.EditInfoActivity.EditInfoActivity"
            android:label="@string/title_activity_edit_info" >
        </activity>
        <activity
            android:name=".activities.NowPlayingActivity"
            android:label="@string/title_activity_now_playing" >
        </activity>

        <activity
            android:name=".activities.PlaylistTracklistActivity"
            android:label="@string/playlist_tracklist_default_toolbar_title" >
        </activity>
    </application>

</manifest>
