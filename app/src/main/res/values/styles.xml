<resources>

    <style name="MusicPlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionModeBackground">@color/primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="NavigationViewTheme">
        <item name="android:textSize">@dimen/navigation_view_text_size</item>
    </style>

    <style name="NavigationView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="itemTextColor">@color/navigation_view_item</item>
        <item name="itemIconTint">@color/navigation_view_item</item>
        <item name="itemBackground">@drawable/navigation_view_item_background</item>
        <item name="theme">@style/NavigationViewTheme</item>
    </style>

    <style name="ToolbarStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/toolbar_text</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal" >
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:minHeight">@dimen/progressbar_height</item>
        <item name="android:maxHeight">@dimen/progressbar_height</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="SingleLineText" >
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListView" >
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/list_divider_height</item>
    </style>

    <style name="ListRow" >
        <item name="android:background">@drawable/list_item_selector</item>
    </style>

    <style name="SingleLineText.AlbumTitle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SingleLineText.AlbumTitle.Primary" >
        <item name="android:textColor">@color/primary_text_dark_background</item>
    </style>

    <style name="SingleLineText.AlbumTitle.Secondary" >
        <item name="android:textColor">@color/secondary_text_dark_background</item>
    </style>

    <style name="SingleLineText.Primary" >
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SingleLineText.Secondary" >
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediaButton.Rewind" parent="MediaButton">
        <item name="android:src">@drawable/media_button_rewind_selector</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
    </style>

    <style name="MediaButton.PlayPause" parent="MediaButton">
        <item name="play_src">@drawable/media_button_play_selector</item>
        <item name="pause_src">@drawable/media_button_pause_selector</item>
        <item name="android:contentDescription">@string/play_pause_content_description</item>
    </style>

    <style name="MediaButton.FastForward" parent="MediaButton">
        <item name="android:src">@drawable/media_button_fast_forward_selector</item>
        <item name="android:contentDescription">@string/fast_forward_content_description</item>
    </style>

    <style name="MediaButton.Shuffle" parent="MediaButton">
        <item name="android:src">@drawable/ic_shuffle_off_18dp</item>
        <item name="android:contentDescription">@string/shuffle_content_description</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MediaButton.Repeat" parent="MediaButton">
        <item name="android:src">@drawable/ic_repeat_off_18dp</item>
        <item name="android:contentDescription">@string/repeat_content_description</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MediaButton.Small">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_media_buttons_margin</item>
    </style>

    <style name="MediaButton.Small.PlayPause" parent="MediaButton">
        <item name="play_src">@drawable/media_button_play_small_selector</item>
        <item name="pause_src">@drawable/media_button_pause_small_selector</item>
        <item name="android:contentDescription">@string/play_pause_content_description</item>
    </style>

    <style name="MediaButton.Small.Rewind" parent="MediaButton">
        <item name="android:src">@drawable/media_button_rewind_small_selector</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
    </style>

    <style name="MediaButton.Small.FastForward" parent="MediaButton">
        <item name="android:src">@drawable/media_button_fast_forward_small_selector</item>
        <item name="android:contentDescription">@string/fast_forward_content_description</item>
    </style>

    <style name="EditInfoView" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditInfoView.EditText">
        <item name="android:enabled">false</item>
    </style>

</resources>
