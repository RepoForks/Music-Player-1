<resources >

    <!-- Base application theme. -->
    <style name="MusicPlayerTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediaButton.Rewind" parent="MediaButton">
        <item name="android:src">@drawable/media_button_rewind_selector</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
    </style>

    <style name="MediaButton.PlayPause" parent="MediaButton">
        <item name="android:src">@drawable/media_button_play_selector</item>
        <item name="play_src">@drawable/media_button_play_selector</item>
        <item name="pause_src">@drawable/media_button_pause_selector</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
    </style>

    <style name="MediaButton.FasrForward" parent="MediaButton">
        <item name="android:src">@drawable/media_button_fast_forward_selector</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
    </style>

    <style name="MediaButton.Shuffle" parent="MediaButton">
        <item name="android:src">@mipmap/ic_shuffle_off_18dp</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="MediaButton.Repeat" parent="MediaButton">
        <item name="android:src">@mipmap/ic_repeat_off_18dp</item>
        <item name="android:contentDescription">@string/rewind_content_description</item>
        <item name="android:gravity">right</item>
    </style>

    <!--<style name="MediaButton.Small.Play" parent="MediaButton">-->
