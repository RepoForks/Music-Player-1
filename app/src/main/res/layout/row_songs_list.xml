<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/album_art"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/row_songs_list_album_art_size"
        android:layout_height="@dimen/row_songs_list_album_art_size" />

    <!--TODO: song title shoud be with regular text color, but artists should be with grey color and
    smaller font size-->

    <LinearLayout
        android:layout_toRightOf="@+id/album_art"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/artist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>