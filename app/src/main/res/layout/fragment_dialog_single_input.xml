<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogFragmentMain" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/dialog_negative_button"/>

        <include layout="@layout/dialog_title" />

    </LinearLayout>

    <LinearLayout style="@style/DialogFragmentBody">
        <ua.edu.cdu.fotius.lisun.musicplayer.views.EditTextWithValidation
            android:id="@+id/dialog_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_text_size"
            style="@style/SingleLineText.EditInfo" />
    </LinearLayout>

    <include
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right|bottom"
        layout="@layout/dialog_positive_button" />

</LinearLayout>