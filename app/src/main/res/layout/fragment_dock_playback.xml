<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dock_playback_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ua.edu.cdu.fotius.lisun.musicplayer.images_loader.ImageViewForLoader
        android:id="@+id/album_art"
        android:layout_alignParentLeft="true"
        android:layout_width="@dimen/dock_playback_art_size"
        android:layout_height="@dimen/dock_playback_art_size" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:clickable="false"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@color/primary"
        android:thumb="@null"
        android:thumbOffset="0dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/track_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/minimal_panel_song_text_size" />

                <ua.edu.cdu.fotius.lisun.musicplayer.views.ArtistNameTextView
                    android:id="@+id/artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/minimal_panel_artist_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/concealable_control_panel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <ua.edu.cdu.fotius.lisun.musicplayer.views.LoopingImageButton
                    android:id="@+id/prev"
                    style="@style/MediaButton.Small.Rewind" />

                <ua.edu.cdu.fotius.lisun.musicplayer.views.PlayPauseButton
                    android:id="@+id/play"
                    style="@style/MediaButton.Small.PlayPause" />

                <ua.edu.cdu.fotius.lisun.musicplayer.views.LoopingImageButton
                    android:id="@+id/next"
                    style="@style/MediaButton.Small.FastForward" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>