<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/playback_fragment_layout_padding"
    android:paddingLeft="@dimen/playback_fragment_layout_padding"
    android:paddingTop="@dimen/playback_fragment_layout_padding"
    android:paddingBottom="@dimen/playback_fragment_layout_padding_bottom"
    android:clickable="false" >


    <!--Minimal layout-->
    <LinearLayout
        android:id="@+id/minimal_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.ConcealableImageView
            android:id="@+id/concealable_album_art"
            android:src="@mipmap/ic_launcher"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/minimal_panel_song_text_size"
                android:gravity="center" />

            <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.ArtistNameTextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/minimal_panel_artist_text_size"
                android:gravity="center" />
        </LinearLayout>

        <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.ConcealableMediaButtonsLayout
            android:id="@+id/concealable_control_panel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.LoopingImageButton
                android:id="@+id/prev_additional"
                style="@style/MediaButton.Small.Rewind" />

            <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.PlayPauseButton
                android:id="@+id/play_additional"
                style="@style/MediaButton.Small.PlayPause" />

            <ua.edu.cdu.fotius.lisun.musicplayer.custom_views.LoopingImageButton
                android:id="@+id/next_additional"
                style="@style/MediaButton.Small.FastForward" />
        </ua.edu.cdu.fotius.lisun.musicplayer.custom_views.ConcealableMediaButtonsLayout>

    </LinearLayout>

    <!--Need this wrapper layout to shift below layout to bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="@dimen/album_cover_image_size"
            android:layout_height="@dimen/album_cover_image_size"
            android:cropToPadding="true"
            android:src="@drawable/default_album_art_512dp" />

    </LinearLayout>

    <!--Playback control panel -->
    <include layout="@layout/playback_control_panel" />

</LinearLayout>
