<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Collapsed stuff-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <ua.edu.cdu.fotius.lisun.musicplayer.ArtistNameTextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/additional_control_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ua.edu.cdu.fotius.lisun.musicplayer.fragments.playback_fragment.RepeatingButton
                android:id="@+id/prev_additional"
                style="@android:style/MediaButton.Previous" />

            <ua.edu.cdu.fotius.lisun.musicplayer.fragments.playback_fragment.PlayButton
                android:id="@+id/play_additional"
                style="@android:style/MediaButton.Play" />

            <ua.edu.cdu.fotius.lisun.musicplayer.fragments.playback_fragment.RepeatingButton
                android:id="@+id/next_additional"
                style="@android:style/MediaButton.Next" />
        </LinearLayout>

    </LinearLayout>

    <!--Need this wrapper layout to shift below layout to bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="@dimen/album_cover_image_size"
            android:layout_height="@dimen/album_cover_image_size"
            android:cropToPadding="true"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <!--Playback control panel -->
    <include layout="@layout/playback_control_panel" />

</LinearLayout>
